<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <!-- Teams -->
    <LinearLayout
    android:orientation="vertical"
    android:layout_weight="1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    	<Spinner android:id="@+id/spin_team"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		/>
    	<TextView android:id="@+id/curr_team"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		/>
    	<Button android:id="@+id/add_team"
    		android:text="@string/add_team"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		/>
    	<TextView android:id="@+id/team_id"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		/>
    </LinearLayout>
    <!-- Players -->
    <LinearLayout
    android:orientation="vertical"
    android:layout_weight="1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
	    <Spinner android:id="@+id/spin_player"
	    		android:layout_width="fill_parent"
	    		android:layout_height="wrap_content"
	    		/>
	    	<TextView android:id="@+id/curr_player"
	    		android:layout_width="fill_parent"
	    		android:layout_height="wrap_content"
	    		/>
	    	<Button android:id="@+id/add_player"
	    		android:text="@string/add_player"
	    		android:layout_width="fill_parent"
	    		android:layout_height="wrap_content"
	    		/>
    </LinearLayout>
    <!-- Times -->
    <LinearLayout
    android:orientation="vertical"
    android:layout_weight="1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
		<ListView android:id="@+id/list_time"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			/>
    	<Button android:id="@+id/add_time"
    		android:text="@string/add_time"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		/>
    </LinearLayout>
</LinearLayout>
